/* Enterprise configuration example for OpenCode that attempts to limit risk by disabling the share feature and asking for bash and edit permissions */
{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "bash": "ask"
  }
  "agent": {
    "web": {
      "mode": "primary",
      "prompt": "{file:./prompts/web.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": false,
        "grep": false,
        "glob": false,
        "list": false,
        "patch": false,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
    },
  },
}
